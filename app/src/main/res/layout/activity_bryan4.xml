<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Bryan_activity4"
        android:padding="16dp">

        <!-- Texto inicial -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aprende paso a paso con teoría y ejercicios guiados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Imagen "Primero comprende la idea" -->
        <ImageView
            android:id="@+id/img_teoria"
            android:layout_width="158dp"
            android:layout_height="171dp"
            android:contentDescription="Comprender teoría"
            android:src="@drawable/bryan_imagen1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo" />

        <!-- Imagen "Luego ponlo en práctica" -->

        <!-- ¿Qué es una gráfica? -->

        <ImageView
            android:id="@+id/img_practica"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="36dp"
            android:contentDescription="Ejercicios prácticos"
            android:src="@drawable/bryan__img2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo" />

        <TextView
            android:id="@+id/titulo_grafica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¿Qué es una gráfica?"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/img_teoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/explicacion_grafica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Una gráfica es una representación visual de datos. Sirve para comparar y representar patrones o tendencias."
            app:layout_constraintTop_toBottomOf="@id/titulo_grafica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Imagen de gráfica -->
        <ImageView
            android:id="@+id/img_grafica"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/bryan_img3"
            android:contentDescription="Gráfica ejemplo"
            app:layout_constraintTop_toBottomOf="@id/explicacion_grafica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón para siguiente explicación -->
        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente explicación"
            app:layout_constraintTop_toBottomOf="@id/img_grafica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- ¿Cómo leer una gráfica? -->
        <TextView
            android:id="@+id/titulo_eje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¿Cómo leer una gráfica?"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_siguiente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/img_ejes"
            android:layout_width="200dp"
            android:layout_height="150dp"

            android:contentDescription="Ejes X y Y"
            app:layout_constraintTop_toBottomOf="@id/titulo_eje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Botón para practicar -->
        <Button
            android:id="@+id/btn_practicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio, ¡vamos!"
            app:layout_constraintTop_toBottomOf="@id/img_ejes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Pregunta de opción múltiple -->
        <TextView
            android:id="@+id/pregunta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¿Cuál deporte tuvo mayor cantidad?"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btn_practicar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/img_respuesta"
            android:layout_width="250dp"
            android:layout_height="150dp"

            android:contentDescription="Gráfica deportes"
            app:layout_constraintTop_toBottomOf="@id/pregunta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- RadioGroup de opciones -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/img_respuesta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/opcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voleibol" />

            <RadioButton
                android:id="@+id/opcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atletismo y Baloncesto" />

            <RadioButton
                android:id="@+id/opcion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fútbol" />
        </RadioGroup>

        <!-- Botón comprobar respuesta -->
        <Button
            android:id="@+id/btn_comprobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprobar respuesta"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Texto con resultado -->
        <TextView
            android:id="@+id/resultado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_comprobar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
