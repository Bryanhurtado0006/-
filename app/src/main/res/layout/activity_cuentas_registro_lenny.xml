<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Cuentas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuentas_Registro_Lenny"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icono_registro_daniel"
            android:layout_marginTop="16dp"
            android:contentDescription="Persona subiendo escalones" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige una cuenta"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para continuar con nosotros"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Cuenta 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/nenas"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:contentDescription="Foto de perfil" />

            <LinearLayout
                android:id="@+id/Sirley"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIRLEY DIAZ"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="diazsirley224@gmail.com"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Cuenta 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/nena"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:contentDescription="Foto de perfil" />

            <LinearLayout
                android:id="@+id/Lenny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LENNY PECHENE"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lennyjazz98@gmail.com"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Cuenta 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/neni"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:contentDescription="Foto de perfil" />

            <LinearLayout
                android:id="@+id/Ana"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANA MARIA ZÚÑIGA"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anamariazu202@gmail.com"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Agregar cuenta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                android:layout_marginEnd="8dp"
                android:contentDescription="Agregar cuenta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar otra cuenta"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Botón iniciar sesión -->
        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR SESION"
            android:backgroundTint="#3399FF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>
