<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="INICIO SESIÓN USUARIO"
        android:textSize="26sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/icono_registro_daniel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Ingresa tu correo electrónico:" />

    <EditText
        android:id="@+id/et_correo_Daniel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tucorreo@ejemplo.com"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Ahora ingresa tu contraseña:" />

    <EditText
        android:id="@+id/et_contraseña_Daniel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/ed_restablecer_contraseña_Daniel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="¿Olvidaste tu contraseña?"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnInicoSecion_Daniel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"
        android:text="INICIAR SESIÓN" />

</LinearLayout>
