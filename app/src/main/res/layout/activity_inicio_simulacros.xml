<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lectura_critica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:padding="20dp"
    android:background="#ffffff"
    tools:context="com.example.myapplicationics.ui.simulacroANA.Inicio_Simulacros">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff">

    </LinearLayout>

    <Button
        android:id="@+id/btn_simulacros"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00BFFF"
        android:text="Simulacros"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginBottom="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_simulacros"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:id="@+id/lectura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/lecturaa"
                    android:contentDescription="Lectura Crítica" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lectura Crítica"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/matematicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/matematicass"
                    android:contentDescription="Matemáticas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matemáticas"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/naturales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/naturaless"
                    android:contentDescription="Ciencias Naturales" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciencias Naturales"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sociales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/socialess"
                    android:contentDescription="Ciencias Sociales" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciencias Sociales"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ingles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ingless"
                    android:contentDescription="Inglés" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inglés"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
