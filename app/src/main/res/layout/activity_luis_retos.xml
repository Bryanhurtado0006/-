<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Luis_Retos">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <!-- Encabezado centrado con espacio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/TXT_Retos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Retos"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/TXT_Raking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Ranking"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:padding="8dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Sección Puntos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/IMG_Copa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="🏆"
                    android:textSize="40sp" />
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/TXT_Puntos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <!-- Valor -->
                    <TextView
                        android:id="@+id/NMR_Valor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="650"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#3366CC"
                        android:paddingTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <!-- Título Mis Retos -->
            <TextView
                android:id="@+id/TXT_Mis_Retos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Retos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <!-- Lista de Retos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Reto individual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#DDDDDD"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- Círculo interactivo -->
                    <TextView

                        android:id="@+id/PUNTO_Reto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="●"
                        android:textSize="20sp"
                        android:textColor="#555555"
                        android:layout_marginEnd="8dp" />

                    <!-- Texto del reto -->
                    <TextView
                        android:id="@+id/TXT_titulo_Reto1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reto 1: Leer un capítulo de un libro"
                        android:textSize="16sp" />

                    <!-- Botón para ver más -->
                    <Button
                        android:id="@+id/BTN_verMasBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▶"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Texto oculto -->
                <TextView
                    android:id="@+id/TXT_detalle_Reto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este reto consiste en leer un capítulo
                    completo de cualquier libro de tu elección y reflexionar
                     sobre lo aprendido."
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:textColor="#444444" />
            </LinearLayout>

            <!-- Título nuevos retos -->
            <TextView
                android:id="@+id/TXT_Descubre_nuevos_retos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubre nuevos retos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <!-- Reto extra con el mismo estilo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Nuevo reto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#DDDDDD"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/PUNTO_iconoReto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="●"
                        android:textSize="20sp"
                        android:textColor="#555555"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/TXT_tituloReto2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reto 2: Hacer 10 minutos de ejercicio"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/BTN_verMasBtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▶"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/TXT_detalleReto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este reto te invita a moverte un poco:
                     haz estiramientos, yoga o una caminata de 10 minutos."
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:textColor="#444444" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


