<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3victor">


    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/btn_menu"
                    android:layout_marginLeft="23dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu_victor"/>

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/btn_notificacion"
                    android:layout_height="40dp"
                    android:layout_marginLeft="260dp"
                    android:src="@drawable/notificacion_victor"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="23dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/libro_victor" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_lectura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="24dp"
                    android:text="Lectura Critica"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/cardview_dark_background"
                    app:iconTint="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="115dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/calculador_victor" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_matematicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matematicas"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="24dp"
                    app:backgroundTint="@color/cardview_dark_background"
                    android:textColor="@android:color/white"
                    app:iconTint="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/sociales_victor" />
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_sociales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciencias Sociales"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="24dp"
                    app:backgroundTint="@color/cardview_dark_background"
                    android:textColor="@android:color/white"
                    app:iconTint="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/ciencias" />
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_naturales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciencias Naturales"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="24dp"
                    app:backgroundTint="@color/cardview_dark_background"
                    android:textColor="@android:color/white"
                    app:iconTint="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/ingles_victor" />
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_ingles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingles"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="24dp"
                    app:backgroundTint="@color/cardview_dark_background"
                    android:textColor="@android:color/white"
                    app:iconTint="@android:color/white"/>
            </LinearLayout>





        </LinearLayout>

    </ScrollView>




</LinearLayout>