<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaterialPdf">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/menu_victor" />

                <ImageView
                    android:id="@+id/btn_notificacion"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="260dp"
                    android:src="@drawable/notificacion_victor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="23dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>


            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/btn_ifecs_pasados"
                android:layout_gravity="center"
                android:text="Ifecs pasados"
                android:textSize="15dp"
                android:layout_marginTop="60dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/btn_libros_interesantes"
                android:text="Libros interesantes"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="40dp"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/btn_lecturas_preguntas"
                android:text="Lecturas con preguntas"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="23dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/btn_Pregunta_comprecion"
                android:text="Preguntas de comprecion"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="40dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/btn_orden_fragmentos"
                android:text="orden de fragmetos"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="40dp"/>






        </LinearLayout>


    </ScrollView>

</LinearLayout>