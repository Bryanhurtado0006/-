<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_test"
    android:padding="@dimen/default_paddingg"
    tools:context=".dashboarBB.OrientacionV.TestVocacion_1">

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progress="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/progress_track"
        app:trackThickness="@dimen/progress_height"
        app:progressColor="@color/colorPrimaryy" />

    <!-- Título del test -->
    <TextView
        android:id="@+id/tvTestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test Vocacional\npara Estudiantes de Grado Once"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/title_text_size1"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/large_marginn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <!-- ScrollView para las preguntas -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTestTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Categoría de pregunta -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Intereses Personales"
                android:textColor="@color/secondary_textt"
                android:textSize="@dimen/category_text_size5"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/small_marginn"/>

            <!-- Texto de la pregunta -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.1 ¿Qué actividad disfrutas más?"
                android:textColor="@color/primary_textt"
                android:textSize="@dimen/question_text_size7"
                android:layout_marginBottom="@dimen/medium_margin"/>

            <!-- Grupo de opciones -->
            <RadioGroup
                android:id="@+id/rgOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Opción 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    app:cardElevation="@dimen/card_elevation"
                    app:strokeColor="@color/card_stroke"
                    app:strokeWidth="@dimen/card_stroke_width">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leer sobre temas nuevos"
                        style="@style/TestOptionRadioButton"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Opción 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    app:cardElevation="@dimen/card_elevation">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resolver acertijos o problemas matemáticos"
                        style="@style/TestOptionRadioButton"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Opción 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    app:cardElevation="@dimen/card_elevation">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ayudar a otras personas"
                        style="@style/TestOptionRadioButton"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Opción 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    app:cardElevation="@dimen/card_elevation">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crear cosas (dibujar, escribir, diseñar)"
                        style="@style/TestOptionRadioButton"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Opción 5 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/card_elevation">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Armar o reparar objetos"
                        style="@style/TestOptionRadioButton"/>
                </com.google.android.material.card.MaterialCardView>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/large_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/PrimaryButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>